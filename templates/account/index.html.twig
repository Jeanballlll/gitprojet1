{% extends 'base.html.twig' %}


{% block title %}Mon compte - Projet 1
{% endblock %}

{% block content %}
	<h1>Mon compte</h1>
	Bienvenue
	{{ app.user.firstname}}
	{{ app.user.lastname}}
	dans votre espace.
	<hr>
	{# afficher seulement si c'est un admin avec is_granted #}
	{% if is_granted('ROLE_ADMIN') %}
	<a href="/admin">Accéder au backoffice (Administrateur)</a><br>
	{% endif %}
	<a href="{{ path('app_account_password') }}">Modifier mot de passe</a><br>
	<a href="{{ path('app_account_address') }}">Gérer mes adresses</a><br>
	<a href="{{ path('app_account_order') }}">Mes commandes</a><br>
	<hr>
{% endblock %}
