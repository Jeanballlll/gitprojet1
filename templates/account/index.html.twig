{% extends 'base.html.twig' %}


{% block title %}Mon compte - Projet 1
{% endblock %}

{% block content %}
	<h1>Mon compte</h1>
	Bienvenue
	{{ app.user.firstname}}
	{{ app.user.lastname}}
	dans votre espace. <br>
	
	{# afficher seulement si c'est un admin avec is_granted #}
	{% if is_granted('ROLE_ADMIN') %}
			<small><a href="/admin">Accéder au backoffice (Administrateur)</a></small><br>
	{% endif %}
	<hr>
	
	<div class="row">
		<div class="col-md-4">
			<div class="account-item text-center">
				<img src="{{ asset('assets/img/padlock.png') }}" alt="Modifier mot de passe"><br>
				<a href="{{ path('app_account_password') }}">Modifier mot de passe</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="account-item text-center">
				<img src="{{ asset('assets/img/address.png') }}" alt="Gérer mes adresses"><br>
				<a href="{{ path('app_account_address') }}">Gérer mes adresses</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="account-item text-center">
				<img src="{{ asset('assets/img/box.png') }}" alt="Mes commandes"><br>
				<a href="{{ path('app_account_order') }}">Mes commandes</a>
			</div>
		</div>
	</div>
	<hr>
{% endblock %}
