{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Projet1
{% endblock %}

{% block content %}
	<h2>Je passe ma commande<h2>
			<p>Choississez vos préférences.</p>
			<hr>
			<div class="row">
				<div class="col-md-6">
					{% set formHtml %}
					{{ form_start(form, {action:path('app_order_recap')}) }}
					{{ form_label(form.addresses, 'Choississez votre adresse de livraison') }}
					<a href="{{ path('app_account_address_add') }}">Ajouter une nouvelle adresse de livraison<a/>
						{{ form_end(form) }}
						{% endset %}

						{{ formHtml|replace({'[br]' : '<br/>'})|raw }}
					</div>
					<div class="col-md-6">
						<div class="text-center">
							<b>Récapitulatif commande(s)</b><br/>
							<p>Récapitulatif de vos produits</p>
						</div>

						<div class="order-sumary">
							{% for key,product in cart %}
								<div class="row {% if key > 0 %}mt-2 {% endif %}">
									<div class="col-2">
										<img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" width="75px">
									</div>
									<div class="col-8 my-auto">
										{{ product.product.name }}<br/>
										<small>{{ product.product.subtitle }}</small>
									</div>
									<div class="col-2 my-auto">
										x{{ product.quantity }}
									</div>
								</div>
							{% endfor %}
						</div>

						<br>
						<b>Bouton pour payer</b>
					</div>
				</div>
			{% endblock %}
